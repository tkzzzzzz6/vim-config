@REM nice to meet you！！！
syntax on 
set tabtop=3
set shiftwidth=3
set expandtab
set autoindent            
set number
set ruler
set showcmd
set incsearch
set hlsearch
set cursorline
set wildmenu
set wildmode=list:longest,full
set background=dark
set t_Co=256
set termguicolors
set fileencoding=utf-8
set encoding=utf-8
set fileencodings=utf-8,cp936,gbk,gb2312,big5,euc-jp,euc-kr,koi8-r,latin1
set filetype=python
set foldmethod=indent
set foldlevel=99
set foldcolumn=1
set backspace=indent,eol,start
set whichwrap+=<,>,h,l
set scrolloff=3
set sidescrolloff=5
set laststatus=2
set showmatch
set matchtime=2 
set listchars=tab:▸\ ,trail:·,extends:>,precedes:<,nbsp:+
set list
set showbreak=+++
set breakindent
